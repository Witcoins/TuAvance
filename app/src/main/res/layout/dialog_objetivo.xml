<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/fondo_dialogo2"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="OBJETIVO"
        android:fontFamily="@font/oswald_negrita"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/objetivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/whiteTransparent"
        android:textSize="18sp"
        android:hint="Escribe aquÃ­"
        style="@style/EditText"/>

    <DatePicker
        android:id="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/boton_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            android:text="cancelar"
            android:layout_gravity="center_horizontal"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/boton_actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteTransparent2"
            android:backgroundTint="@color/ic_launcher_background"
            android:text="aceptar"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    </LinearLayout>

</ScrollView>